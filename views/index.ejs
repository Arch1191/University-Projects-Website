<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/main.css">
	<title>Dash</title>
</head>
<body>
	<%- include('header', {activePage}) %>
    <div class="content">
		<h1> Welcome to the Course Dashboard </h1>
		<div class="dash_items">
			<a href="/courses">
				<section class="card">
					<h2> Total Courses </h2>
					<h3> 
						<%= courseCount %>
					</h3>
				</section>
			</a>

			<section class="card">
				<h2> Total Enrollments </h2>
				<h3> 
					<%= studentCount %>
				</h3>
			</section>

			<section class="card">
				<h2> Average Enrollments </h2>
				<h3> 
					<%= averageEnrollment %>
				</h3>
			</section>

			<section class="card">
				<h2> Highest Enrollment </h2>
				<h3> 
					<%= highestEnrollment %>
				</h3>
			</section>

			<section class="card">
				<h2> Lowest Enrollment </h2>
				<h3> 
					<%= lowestEnrollment %>
				</h3>
			</section>

		</div>

	</div>
</body>
